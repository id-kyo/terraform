# ==================================================================
# LOCALS - CONFIGURAÇÕES GLOBAIS
# ==================================================================
locals {
  # ==================================================================
  # GENERAL
  # ==================================================================
  owner = "caio"
  
  # ==================================================================
  # AWS GENERAL
  # ==================================================================
  aws_environment = "development"
  aws_region      = "us-east-1"
  
  # ==================================================================
  # VPC CONFIGURATION
  # ==================================================================
  vpc_cidr = "10.0.0.0/16"
  vpc_name = "lb-as-vpc"
  
  # ==================================================================
  # SUBNET CONFIGURATION
  # ==================================================================
  subnet_cidr_1 = "10.0.1.0/24"
  subnet_cidr_2 = "10.0.2.0/24"
  az_1 = "us-east-1a"
  az_2 = "us-east-1b"
  
  # ==================================================================
  # EC2 CONFIGURATION
  # ==================================================================
  ami_id = "ami-0c55b159cbfafe01e"
  instance_type = "t2.micro"
  key_name = "source_key"
  
  # ==================================================================
  # AUTO SCALING CONFIGURATION
  # ==================================================================
  asg_desired_capacity = 2
  asg_max_size = 4
  asg_min_size = 1
  
  # ==================================================================
  # LOAD BALANCER CONFIGURATION
  # ==================================================================
  lb_name = "terraform-lb"
  lb_internal = false
  lb_enable_deletion_protection = false
  
  # ==================================================================
  # SECURITY GROUP CONFIGURATION
  # ==================================================================
  sg_name = "lb-as-security-group"
  sg_description = "Security group for Load Balancer and Auto Scaling"
  
  # ==================================================================
  # AWS DEFAULT TAGS
  # ==================================================================
  aws_default_tags = {
    owner           = local.owner
    managed_by      = "terraform"
    environment     = local.aws_environment
    source_project  = "aws-lb-as"
  }
}
