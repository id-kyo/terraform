# ==================================================================
# LOCALS - CONFIGURAÇÕES GLOBAIS
# ==================================================================
locals {
  # ==================================================================
  # GENERAL
  # ==================================================================
  owner = "caio"
  
  # ==================================================================
  # AWS GENERAL
  # ==================================================================
  aws_environment = "develop"
  aws_region      = "us-east-1"
  
  # ==================================================================
  # VPC CONFIGURATION
  # ==================================================================
  vpc_cidr = "10.0.0.0/16"
  vpc_name = "central-network"
  
  # ==================================================================
  # SUBNET CONFIGURATIONS
  # ==================================================================
  public_web_subnet_1_cidr = "10.0.1.0/24"
  public_web_subnet_2_cidr = "10.0.2.0/24"
  private_app_subnet_1_cidr = "10.0.3.0/24"
  private_app_subnet_2_cidr = "10.0.4.0/24"
  private_db_subnet_1_cidr = "10.0.5.0/24"
  private_db_subnet_2_cidr = "10.0.6.0/24"
  
  # ==================================================================
  # AVAILABILITY ZONES
  # ==================================================================
  az_1 = "us-east-1a"
  az_2 = "us-east-1b"
  
  # ==================================================================
  # SECURITY CONFIGURATION
  # ==================================================================
  ssh_locate = "0.0.0.0/0"
  
  # ==================================================================
  # DATABASE CONFIGURATION
  # ==================================================================
  database_instance_class = "db.t2.micro"
  multi_az_deployment = true
  
  # ==================================================================
  # EC2 CONFIGURATION
  # ==================================================================
  ami_id = "ami-052efd3df9dad4825"
  instance_type = "t2.micro"
  key_name = "source_key"
  
  # ==================================================================
  # AUTO SCALING CONFIGURATION
  # ==================================================================
  asg_desired_capacity = 1
  asg_max_size = 2
  asg_min_size = 1
  
  # ==================================================================
  # LOAD BALANCER CONFIGURATION
  # ==================================================================
  lb_name = "web-external-load-balancer"
  lb_internal = false
  lb_enable_deletion_protection = false
  
  # ==================================================================
  # AWS DEFAULT TAGS
  # ==================================================================
  aws_default_tags = {
    owner           = local.owner
    managed_by      = "terraform"
    environment     = local.aws_environment
    source_project  = "aws-3tier"
    architecture    = "3-tier"
  }
}
