# ==================================================================
# LOCALS - CONFIGURAÇÕES GLOBAIS
# ==================================================================
locals {
  # ==================================================================
  # GENERAL
  # ==================================================================
  owner = "caio"
  
  # ==================================================================
  # AWS GENERAL
  # ==================================================================
  aws_environment = "develop"
  aws_region      = "us-east-1"
  
  # ==================================================================
  # EC2 INSTANCE CONFIGURATION
  # ==================================================================
  instance_type = "t2.micro"
  instance_name = "ec2-test"
  
  # ==================================================================
  # AMI CONFIGURATION
  # ==================================================================
  ami_id = "ami-0c55b159cbfafe01e"  # Amazon Linux 2
  
  # ==================================================================
  # KEY PAIR CONFIGURATION
  # ==================================================================
  key_name   = "ssh_key"
  public_key_path = "./my-priv-key"
  
  # ==================================================================
  # AWS DEFAULT TAGS
  # ==================================================================
  aws_default_tags = {
    owner           = local.owner
    managed_by      = "terraform"
    environment     = local.aws_environment
    source_project  = "aws-sg-ec2"
  }
}
