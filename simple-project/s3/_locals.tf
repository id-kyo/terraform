# ==================================================================
# LOCALS - CONFIGURAÇÕES GLOBAIS
# ==================================================================
locals {
  # ==================================================================
  # GENERAL
  # ==================================================================
  owner = "caio"
  
  # ==================================================================
  # AWS GENERAL
  # ==================================================================
  aws_environment = "develop"
  aws_region      = "us-east-1"
  
  # ==================================================================
  # S3 BUCKET CONFIGURATION
  # ==================================================================
  bucket_name = "bucketglobal-csv-test"
  
  # ==================================================================
  # S3 BUCKET FEATURES
  # ==================================================================
  enable_versioning = true
  enable_logging    = false
  
  # ==================================================================
  # S3 BUCKET TAGS
  # ==================================================================
  bucket_tags = {
    Name        = "Bucket-test"
    Environment = "Terraform-test"
    Purpose     = "CSV Storage"
  }
  
  # ==================================================================
  # AWS DEFAULT TAGS
  # ==================================================================
  aws_default_tags = {
    owner           = local.owner
    managed_by      = "terraform"
    environment     = local.aws_environment
    source_project  = "aws-bucket"
  }
}
